@using SOFTWAREANDTECH.Site.Models;
@model MUserForm

<div class="modal fade formulario" data-backdrop="static" data-keyboard="false" id="mform_user">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frm-user" role="form" autocomplete="off">

                    @Html.HiddenFor(m => m.tuid)

                    <div class="form-group row">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.email)
                            @Html.TextBoxFor(m => m.email, new { @type = "email", @class = "form-control", @required = true })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.uname)
                            @Html.TextBoxFor(m => m.uname, new { @class = "form-control", @required = true })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.upwd)
                            @Html.PasswordFor(m => m.upwd, new { @class = "form-control", @required = true })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.tgid)
                            <select class="form-control umultiselect" id="tgid" name="tgid" required></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <div class="btn-form text-right">
                                <input type="submit" id="fn_guardar" class="btn btn-success" data-process=0 value="Guardar" />
                                <button type="button" id="fn_cancelar" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->